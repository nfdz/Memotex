<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/colorPrimary">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tutorial_add_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_add_iv"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="@string/tutorial_add_exercise"
        android:textSize="@dimen/tutorial_text_size"
        android:textColor="@color/textColorLight"
        android:layout_width="@dimen/tutorial_content_width"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/tutorial_add_iv"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_add_tv"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_edit_tv"
        android:layout_width="@dimen/tutorial_content_width"
        android:layout_height="55dp"
        app:srcCompat="@drawable/tutorial_add"/>

    <TextView
        android:id="@+id/tutorial_edit_tv"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_add_iv"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_edit_iv"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:text="@string/tutorial_edit_exercise"
        android:textSize="@dimen/tutorial_text_size"
        android:textColor="@color/textColorLight"
        android:layout_width="@dimen/tutorial_content_width"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/tutorial_edit_iv"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_edit_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/tutorial_content_width"
        android:layout_height="44dp"
        app:srcCompat="@drawable/tutorial_edit_and_exercise"/>

    <TextView
        android:id="@+id/tutorial_remove_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_remove_iv"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="18dp"
        android:text="@string/tutorial_delete_exercise"
        android:textSize="@dimen/tutorial_text_size"
        android:textColor="@color/textColorLight"
        android:layout_width="@dimen/tutorial_content_width"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/tutorial_remove_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_remove_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_width="@dimen/tutorial_content_width"
        android:layout_height="120dp"
        app:srcCompat="@drawable/tutorial_remove"/>

</androidx.constraintlayout.widget.ConstraintLayout>